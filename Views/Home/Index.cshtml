@{
    Layout = "_Layout";
    ViewData["Title"] = "Music Store";
}

<div class="container">
    <!-- Toolbar -->
    <div class="toolbar">
        <div class="toolbar-group">
            <label>Region</label>
            <select id="language">
                <option value="en-US">English (USA)</option>
                <option value="ru-RU">Русский (Россия)</option>
            </select>
        </div>

        <div class="toolbar-group">
            <label>Seed (64-bit)</label>
            <input type="text" id="seed" value="1770737616447" />
            <button id="randomSeed">Random seed</button>
        </div>

        <div class="toolbar-group">
            <label>Average likes (0-10)</label>
            <input type="number" id="likes" min="0" max="10" step="0.1" value="3.7" />
        </div>

        <div class="toolbar-group">
            <label>View</label>
            <select id="viewMode">
                <option value="table">Table</option>
                <option value="gallery">Gallery</option>
            </select>
        </div>
    </div>

    <!-- Table View -->
    <div id="tableView" class="view-container active">
        <table id="songsTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Album</th>
                    <th>Genre</th>
                    <th>Likes</th>
                    <th>Play</th>
                </tr>
            </thead>
            <tbody id="tableBody"></tbody>
        </table>

        <div class="pagination">
            <button id="prevPage">Prev</button>
            <span id="pageInfo">Page 1</span>
            <button id="nextPage">Next</button>
        </div>
    </div>

    <!-- Gallery View -->
    <div id="galleryView" class="view-container">
        <div id="galleryGrid"></div>
    </div>
</div>
